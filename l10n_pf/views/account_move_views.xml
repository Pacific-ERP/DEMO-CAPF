<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_move_line_tree_inherited" model="ir.ui.view">
            <field name="name">account.move.line.tree.inherited</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_tree" />
            <field name="arch" type="xml">
                <tree position="inside">
                    <field name="balance" optional="hide" sum="total" />
                    <field name="amount_currency" optional="hide" sum="total" />
                </tree>
                <field name="partner_id" position="before">
                    <field name="product_id" optional="hide" />
                    <field name="product_uom_category_id" optional="hide" />
                </field>
            </field>
        </record>
        <record id="view_move_line_tree_multi_edit" model="ir.ui.view">
            <field name="name">account.move.line.tree.multi_edit</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_tree" />
            <field name="groups_id" eval="[(4, ref('l10n_pf.account_move_line_multi_edit'))]"/>
            <field name="arch" type="xml">
                <tree position="attributes">
                    <attribute name="multi_edit">true</attribute>
                </tree>
            </field>
        </record>
        <record id="view_account_move_line_filter_inherited" model="ir.ui.view">
            <field name="name">account.move.line.search.inherited</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_account_move_line_filter" />
            <field name="arch" type="xml">
                <field name="reconcile_model_id" position="after">
                    <field name="debit" string="&gt; debit" filter_domain="[('debit', '&gt;', self)]" />
                    <field name="debit" string="&lt; debit" filter_domain="[('debit', '&lt;', self)]" />
                    <field name="credit" string="&gt; credit" filter_domain="[('credit', '&gt;', self)]" />
                    <field name="credit" string="&lt; credit" filter_domain="[('credit', '&lt;', self)]" />
                    <field name="debit" string="= debit ou credit" filter_domain="[ '|', ('debit', '=', self), ('credit', '=', self)]" />
                    <field name="amount_currency" string="Montant en devise" />
                </field>
            </field>
        </record>
    </data>
</odoo>